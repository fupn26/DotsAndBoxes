<Window x:Class="DotsAndBoxes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotsAndBoxes"
        xmlns:viewmodels="clr-namespace:DotsAndBoxes.ViewModels"
        xmlns:views="clr-namespace:DotsAndBoxes.Views"
        mc:Ignorable="d"
        Title="Dots and Boxes" SizeToContent="WidthAndHeight" Background="WhiteSmoke" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate x:Name="classicGameView" DataType="{x:Type viewmodels:ClassicGameViewModel}">
            <views:GameView CanvasHeight="500" CanvasWidth="500" DataContext="{Binding}" Loaded="GameView_Loaded"/>
        </DataTemplate>
        <DataTemplate x:Name="WelcomeView" DataType="{x:Type viewmodels:WelcomeViewModel}">
            <views:WelcomeView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="DiamondGameView" DataType="{x:Type viewmodels:DiamondGameViewModel}">
            <views:GameView CanvasHeight="490" CanvasWidth="490" IsClassicView="False" DataContext="{Binding}" Loaded="GameView_Loaded"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding}"/>
    </Grid>
</Window>
