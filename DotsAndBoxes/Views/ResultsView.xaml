<Page x:Class="DotsAndBoxes.Views.ResultsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DotsAndBoxes.Views"
      mc:Ignorable="d" 
      Title="ResultsView">

    <Grid>
        <ScrollViewer>
            <ListView ItemsSource="{Binding PrevGameStates}">
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Player1}" Header="Player1"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Score[0]}" Header="Player1 Score"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Score[1]}" Header="PLayer2 Score"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Player2}" Header="Player2"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Length}" Header="Length"/>
                    <GridViewColumn DisplayMemberBinding="{Binding GameMode}" Header="Game Mode"/>
                    <GridViewColumn DisplayMemberBinding="{Binding GameType}" Header="Game Type"/>
                </GridView>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
